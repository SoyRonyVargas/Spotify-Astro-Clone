---
import PlaylistItemCard from '@/components/PlaylistItemCard.astro';
import Greeting from '@/components/Greeting.svelte';
import Layout from '../layouts/Layout.astro';
import { datos } from '@/lib/data';
---

<Layout title="Welcome to Astro.">
    <div 
        id="playlist-container"
        class="relative transition-all duration-1000 bg-green-600"
    >
        <!-- page header -->

        <div class="relative z-10 px-6 pt-10">

            <Greeting client:visible />

            <ul class="flex flex-wrap mt-6 gap-4">
                {
                    datos.map( playlist => (
                        <PlaylistItemCard
                            playlist={playlist}
                        />
                    ))
                }
            </ul>
            
        </div>

        <div class="absolute inset-0 bg-gradient-to-t from-zinc-900 via-zinc-900/80">

        </div>
    </div>
</Layout>
