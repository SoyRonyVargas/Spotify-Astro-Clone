---
import TimeIcon from '@/icons/Time.astro'
import type { Song } from '@/lib/data';

interface Props {
    songs: Song[]
}

const { songs } = Astro.props
---

<table class="table-auto text-left min-w-full divide-y divide-gray-500/20">
    <thead>
        <tr class="text-zinc-400 text-sm">
            <th class="px-4 py-2 font-light">
                #
            </th>
            <th class="px-4 py-2 font-light">
                Titulo
            </th>
            <th class="px-4 py-2 font-light">
                √Ålbum
            </th>
            <th class="px-4 py-2 font-light">
                <TimeIcon/>
            </th>
        </tr>
    </thead>
    <tbody>
       <tr class="h-[16px]"></tr>
        {
            songs.map( (song,index) => (
            <tr class="text-sm border-spacing-0 overflow-hidden transition duration-300 font-light text-gray-300 hover:bg-white/10 rounded-lg">
                <th class="px-4 py-2 w-5">
                    { index + 1 }
                </th>
                <th class="px-4 py-2 flex gap-3">
                    <picture>
                        <img class="w-11 h-11 rounded-sm" src={song.image} alt={song.title}>
                    </picture>
                    <section class="flex flex-col">
                        <h3 class="text-white text-base font-normal">{ song.title }</h3>
                        <span class="opacity-50">{ song.artists.join(",") }</span>
                    </section>
                </th>
                <th class="px-4 py-2">
                    { song.album }
                </th>
                <th class="px-4 py-2">
                    { song.duration }
                </th>
            </tr>
            ))
        }
     
    </tbody>
</table>
