---
import LibraryIcon from '@/icons/Library.astro'
import HomeIcon from '@/icons/Home.astro'
import SideMenuIcon from './SideMenuIcon.astro';
import SearchIcon from '@/icons/Search.astro';
import { datos } from '../lib/data'
import SideMenuCard from './SideMenuCard.astro';
---

<nav class="flex flex-col flex-1 gap-2">
    <div class="bg-zinc-900 rounded-lg p-2">
        <ul class="">
            <SideMenuIcon href='/'>
                <HomeIcon />
                Inicio
            </SideMenuIcon>
            <SideMenuIcon href='/'>
                <SearchIcon/>
                Buscar
            </SideMenuIcon>
        </ul>
    </div>

    <div class="bg-zinc-900 rounded-lg p-2 flex-1">
        
        <ul class="">
            
            <SideMenuIcon href='/'>
                <LibraryIcon/>
                Tu biblioteca
            </SideMenuIcon>

            {
                datos.map( playlist => (
                    <SideMenuCard
                        playlist={playlist}
                    />
                ))
            }
        </ul>
        
    </div>

</nav>